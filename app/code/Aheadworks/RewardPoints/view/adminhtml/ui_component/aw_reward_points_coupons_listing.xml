<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                aw_reward_points_coupons_listing.aw_reward_points_coupons_listing_data_source
            </item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="generate">
                <class>primary</class>
                <label translate="true">Generate</label>
                <url path="*/coupons_generate"/>
            </button>
        </buttons>
        <spinner>aw_reward_points_coupons_columns</spinner>
        <deps>
            <dep>aw_reward_points_coupons_listing.aw_reward_points_coupons_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="aw_reward_points_coupons_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">coupon_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Aheadworks_RewardPoints::aw_reward_points_coupons</aclResource>
        <dataProvider name="aw_reward_points_coupons_listing_data_source"
                      class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <primaryFieldName>coupon_id</primaryFieldName>
                <requestFieldName>coupon_id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                    <url path="*/*/massAction">
                        <param name="type">delete</param>
                    </url>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected coupons?</message>
                        <title translate="true">Delete coupons</title>
                    </confirm>
                </settings>
            </action>
            <action name="enable">
                <settings>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                    <url path="*/*/massAction">
                        <param name="type">enable</param>
                    </url>
                    <confirm>
                        <message translate="true">Are you sure you want to enable the selected coupons?</message>
                        <title translate="true">Enable coupons</title>
                    </confirm>
                </settings>
            </action>
            <action name="disable">
                <settings>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                    <url path="*/*/massAction">
                        <param name="type">disable</param>
                    </url>
                    <confirm>
                        <message translate="true">Are you sure you want to disable the selected coupons?</message>
                        <title translate="true">Disable coupons</title>
                    </confirm>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="aw_reward_points_coupons_columns">
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>coupon_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="coupon_id" sortOrder="20">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="customer_name" sortOrder="30">
            <settings>
                <label translate="true">Customer Name</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="customer_email" sortOrder="40">
            <settings>
                <label translate="true">Customer Email</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="code" sortOrder="50">
            <settings>
                <label translate="true">Code</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <label translate="true">Status</label>
                <dataType>select</dataType>
                <filter>select</filter>
                <options class="Aheadworks\RewardPoints\Model\Source\Coupon\Status"/>
            </settings>
        </column>
        <column name="balance" sortOrder="70">
            <settings>
                <label translate="true">Balance</label>
                <filter>textRange</filter>
            </settings>
        </column>
        <column name="coupon_created_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date"
                sortOrder="80">
            <settings>
                <label translate="true">Created At</label>
                <dataType>date</dataType>
                <filter>dateRange</filter>
            </settings>
        </column>
        <column name="coupon_updated_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date"
                sortOrder="90">
            <settings>
                <label translate="true">Updated At</label>
                <dataType>date</dataType>
                <filter>dateRange</filter>
            </settings>
        </column>
    </columns>
</listing>
