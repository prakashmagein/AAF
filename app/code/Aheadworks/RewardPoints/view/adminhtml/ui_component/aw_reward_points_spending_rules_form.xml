<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_reward_points_spending_rules_form.aw_reward_points_spending_rules_form_data_source</item>
            <item name="deps" xsi:type="string">aw_reward_points_spending_rules_form.aw_reward_points_spending_rules_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Rule</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">aw_reward_points_spending_rules_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Button\Back</item>
            <item name="delete" xsi:type="string">Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Button\Delete</item>
            <item name="reset" xsi:type="string">Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Button\Reset</item>
            <item name="save" xsi:type="string">Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Button\Save</item>
            <item name="save_and_continue" xsi:type="string">Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Button\SaveAndContinue</item>
        </item>
    </argument>
    <dataSource name="aw_reward_points_spending_rules_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Aheadworks\RewardPoints\Ui\DataProvider\SpendRule\FormDataProvider</argument>
            <argument name="name" xsi:type="string">aw_reward_points_spending_rules_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="aw_reward_points/spending_rules/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general_settings_fieldset">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">General Settings</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
            </item>
        </argument>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">id</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Enable Rule</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </field>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">description</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
        </field>
        <field name="website_ids" class="Aheadworks\RewardPoints\Ui\Component\Form\Field\EarnRule\Website">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Aheadworks\RewardPoints\Model\Source\Transaction\Website</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Website</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">website_ids</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
        </field>
        <field name="customer_group_ids">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Aheadworks\RewardPoints\Model\Source\EarnRule\CustomerGroup</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Customer Group</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">customer_group_ids</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
        </field>
        <field name="from_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">From</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">from_date</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">70</item>
                </item>
            </argument>
        </field>
        <field name="to_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">To</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">to_date</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">80</item>
                </item>
            </argument>
        </field>
        <field name="priority">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Priority</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">priority</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-not-negative-number" xsi:type="boolean">true</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">90</item>
                </item>
            </argument>
        </field>
        <field name="discard_subsequent_rules">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Discard Subsequent Rules</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">discard_subsequent_rules</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="conditions_fieldset">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Conditions</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="additionalClasses" xsi:type="string">rule_conditions_fieldset</item>
            </item>
        </argument>
        <field name="type" class="Aheadworks\RewardPoints\Ui\Component\Form\Field\SpendRule\ConditionType">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Aheadworks\RewardPoints\Model\Source\SpendRule\Type</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Type</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">rule</item>
                    <item name="dataScope" xsi:type="string">type</item>
                    <item name="default" xsi:type="string">catalog</item>
                    <item name="scopeLabel" xsi:type="string">[GLOBAL]</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="value" xsi:type="string">catalog</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.conditions_fieldset.conditions_container.catalog_container</item>
                                        <item name="callback" xsi:type="string">show</item>
                                    </item>
                                    <item name="1" xsi:type="array">
                                        <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.conditions_fieldset.conditions_container.cart_container</item>
                                        <item name="callback" xsi:type="string">hide</item>
                                    </item>
                                </item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="value" xsi:type="string">cart</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.conditions_fieldset.conditions_container.catalog_container</item>
                                        <item name="callback" xsi:type="string">hide</item>
                                    </item>
                                    <item name="1" xsi:type="array">
                                        <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.conditions_fieldset.conditions_container.cart_container</item>
                                        <item name="callback" xsi:type="string">show</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>
        <container name="conditions_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">uiCollection</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
            <container name="catalog_container">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="template" xsi:type="string">Aheadworks_RewardPoints/ui/form/element/rule/hideable-container</item>
                        <item name="component" xsi:type="string">Aheadworks_RewardPoints/js/ui/form/element/rule/hideable_container</item>
                    </item>
                </argument>
                <container name="advanced_conditions_container">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="template" xsi:type="string">Aheadworks_RewardPoints/ui/form/element/rule/hideable-container</item>
                            <item name="component" xsi:type="string">Aheadworks_RewardPoints/js/ui/form/element/rule/hideable_container</item>
                            <item name="additionalClasses" xsi:type="string">aw-reward-points__container-conditions</item>
                        </item>
                    </argument>
                    <htmlContent name="html_content">
                        <block class="Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Conditions\Catalog\Conditions" name="aw_rp_rule_catalog_conditions"/>
                    </htmlContent>
                </container>
            </container>
            <container name="cart_container">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="template" xsi:type="string">Aheadworks_RewardPoints/ui/form/element/rule/hideable-container</item>
                        <item name="component" xsi:type="string">Aheadworks_RewardPoints/js/ui/form/element/rule/hideable_container</item>
                    </item>
                </argument>
                <container name="advanced_conditions_container">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="template" xsi:type="string">Aheadworks_RewardPoints/ui/form/element/rule/hideable-container</item>
                            <item name="component" xsi:type="string">Aheadworks_RewardPoints/js/ui/form/element/rule/hideable_container</item>
                            <item name="additionalClasses" xsi:type="string">aw-reward-points__container-conditions</item>
                        </item>
                    </argument>
                    <htmlContent name="html_content">
                        <block class="Aheadworks\RewardPoints\Block\Adminhtml\SpendRule\Edit\Conditions\Cart\Conditions" name="aw_rp_rule_cart_conditions"/>
                    </htmlContent>
                </container>
            </container>
        </container>
    </fieldset>
    <fieldset name="actions_fieldset">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Actions</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="dataScope" xsi:type="string">action.type</item>
            </item>
        </argument>
        <container name="points_limit">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataScope" xsi:type="string">points_limit</item>
                </item>
            </argument>
            <field name="coverage_percent">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Points Usage Limit, %</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="source" xsi:type="string">rule</item>
                        <item name="dataScope" xsi:type="string">coverage_percent</item>
                        <item name="validation" xsi:type="array">
                            <item name="validate-digits" xsi:type="boolean">true</item>
                            <item name="validate-number-range" xsi:type="string">0-100</item>
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="notice" xsi:type="string" translate="true">Overrides settings in store configuration. Set to 0 to disable spending</item>
                        <item name="sortOrder" xsi:type="number">15</item>
                    </item>
                </argument>
            </field>
        </container>
    </fieldset>
</form>
