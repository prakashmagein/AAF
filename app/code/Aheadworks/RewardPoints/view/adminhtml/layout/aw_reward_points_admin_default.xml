<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_RewardPoints::css/page-menu.css"/>
        <css src="Aheadworks_RewardPoints::css/style.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu" name="aw_reward_points_menu">
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.transactions">
                    <arguments>
                        <argument name="path" xsi:type="string">*/transactions/</argument>
                        <argument name="label" xsi:type="string" translate="true">Transactions</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_RewardPoints::aw_reward_points_transaction</argument>
                        <argument name="controller" xsi:type="string">transactions</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.customers">
                    <arguments>
                        <argument name="path" xsi:type="string">*/customers/</argument>
                        <argument name="label" xsi:type="string" translate="true">Customers</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_RewardPoints::aw_reward_points_customers</argument>
                        <argument name="controller" xsi:type="string">customers</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.spending_rules">
                    <arguments>
                        <argument name="path" xsi:type="string">*/spending_rules/</argument>
                        <argument name="label" xsi:type="string" translate="true">Points Spending Rules</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_RewardPoints::aw_reward_points_spending_rules</argument>
                        <argument name="controller" xsi:type="string">spending_rules</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.earning_rules">
                    <arguments>
                        <argument name="path" xsi:type="string">*/earning_rules/</argument>
                        <argument name="label" xsi:type="string" translate="true">Points Earning Rules</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_RewardPoints::aw_reward_points_earning_rules</argument>
                        <argument name="controller" xsi:type="string">earning_rules</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.coupons">
                    <arguments>
                        <argument name="path" xsi:type="string">*/coupons/</argument>
                        <argument name="label" xsi:type="string" translate="true">Coupons</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_RewardPoints::aw_reward_points_coupons</argument>
                        <argument name="controller" xsi:type="string">coupons</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.settings">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_rewardpoints</argument>
                        <argument name="label" xsi:type="string" translate="true">Settings</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_RewardPoints::config_aw_rewardpoints</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.com/resources/points-and-rewards/user-manual-points-and-rewards</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\RewardPoints\Block\Adminhtml\Page\Menu\Item" name="aw_reward_points_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.com/contact</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
