                            <td colspan="2"><?php echo $at['qty'].' x '.$at['title'].' x '.$block->formatPrice($at['price']) ?></td>
                            <td><?php echo $sku[$count]; ?></td>
                            <td colspan="3"><?php echo __('Ordered: ').$at['qty'] * $item->getQtyOrdered(); ?></td>
