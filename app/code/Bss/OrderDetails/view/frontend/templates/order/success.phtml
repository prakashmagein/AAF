            <div class="billing-method">
                <strong class="box-title">
                    <span class="box-des"><?php echo __('Payment Method') ?></span>
                </strong>
                <div class="box-content">
                      <?php echo $methodTitle ?>
                </div>
            </div>
        <?php endif; ?>
    </div>

    </div>
    <?php endif ?>

