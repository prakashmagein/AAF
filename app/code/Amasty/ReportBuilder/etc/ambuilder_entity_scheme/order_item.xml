<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:amasty:module:Amasty_ReportBuilder:etc/entity_scheme.xsd">
    <amasty_report_builder_entities>
        <entity name="order_item" primary="true">
            <title>Order Item</title>
            <main_table>sales_order_item</main_table>

            <columns>
                <column name="item_id" primary="true" />
                <column name="base_price">
                    <aggregation_type>sum</aggregation_type>
                    <ui_grid_class>Magento\Catalog\Ui\Component\Listing\Columns\Price</ui_grid_class>
                </column>
                <column name="price">
                    <aggregation_type>sum</aggregation_type>
                    <ui_grid_class>Magento\Catalog\Ui\Component\Listing\Columns\Price</ui_grid_class>
                </column>
                <column name="is_virtual">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="is_qty_decimal">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="no_discount">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="locked_do_invoice">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="locked_do_ship">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="free_shipping">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
            </columns>

            <relations>
                <relation name="catalog_product" type="column">
                    <column>product_id</column>
                    <reference_column>entity_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
                <relation name="order" type="column">
                    <column>order_id</column>
                    <reference_column>entity_id</reference_column>
                    <relationship_type>many_to_one</relationship_type>
                </relation>
                <relation name="creditmemo_item" type="column">
                    <column>item_id</column>
                    <reference_column>order_item_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
            </relations>

            <expressions>
                <expression name="hideSimpleForCompoosite">order_item.parent_item_id IS NULL</expression>
            </expressions>
        </entity>
    </amasty_report_builder_entities>
</config>
