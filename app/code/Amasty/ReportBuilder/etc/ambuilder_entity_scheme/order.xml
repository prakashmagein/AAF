<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Amasty_ReportBuilder:etc/entity_scheme.xsd">
    <amasty_report_builder_entities>
        <entity name="order" primary="true">
            <title>Order Entity</title>
            <main_table>sales_order</main_table>

            <columns>
                <column name="entity_id" primary="true">
                    <title>Order ID</title>
                </column>
                <column name="increment_id">
                    <title>Order ID (Inc)</title>
                </column>
                <column name="store_id">
                    <type>int</type>
                    <source_model>Magento\Store\Model\System\Store</source_model>
                </column>
                <column name="created_at" useForPeriod="true"/>
                <column name="status">
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
                </column>
                <column name="is_virtual">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="protect_code">
                    <hidden>true</hidden>
                </column>
                <column name="can_ship_partially">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="can_ship_partially_item">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="customer_is_guest">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="customer_note_notify">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="email_sent">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="send_email">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="forced_shipment_with_invoice">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="payment_method" columnType="foreign">
                    <title>Payment Method</title>
                    <link>order_payment.method</link>
                </column>
            </columns>

            <relations>
                <relation name="order_item" type="column">
                    <column>entity_id</column>
                    <reference_column>order_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="order_address" type="column">
                    <column>entity_id</column>
                    <reference_column>parent_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="customer" type="column">
                    <column>customer_id</column>
                    <reference_column>entity_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
                <relation name="creditmemo" type="column">
                    <column>entity_id</column>
                    <reference_column>order_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="creditmemo" type="column">
                    <column>entity_id</column>
                    <reference_column>order_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="shipment" type="column">
                    <column>entity_id</column>
                    <reference_column>order_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="invoice" type="column">
                    <column>entity_id</column>
                    <reference_column>order_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="order_payment" type="column">
                    <column>entity_id</column>
                    <reference_column>parent_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
            </relations>
        </entity>
    </amasty_report_builder_entities>
</config>
