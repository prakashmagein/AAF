<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Amasty_ReportBuilder:etc/entity_scheme.xsd">
    <amasty_report_builder_entities>
        <entity name="catalog_product" eav="true" primary="true">
            <title>Catalog Product</title>
            <main_table>catalog_product_entity</main_table>

            <columns>
                <column name="entity_id" primary="true">
                    <title>Product ID</title>
                </column>
                <column name="created_at" useForPeriod="true" frontendModel="dateRange" />
                <column name="name" columnType="eav">
                    <title>Product Name</title>
                </column>
                <column name="price" columnType="eav">
                    <aggregation_type>sum</aggregation_type>
                    <ui_grid_class>Magento\Catalog\Ui\Component\Listing\Columns\Price</ui_grid_class>
                </column>
                <column name="sku" columnType="default">
                    <!-- <aggregation_type>none</aggregation_type> -->
                </column>
                <column name="category_ids" columnType="eav">
                    <hidden>true</hidden>
                </column>
                <column name="media_gallery" columnType="eav">
                    <hidden>true</hidden>
                </column>
                <column name="quantity_and_stock_status" columnType="eav">
                    <title>Stock Status</title>
                    <hidden>true</hidden>
                </column>
                <column name="attribute_set_id">
                    <aggregation_type>group_concat</aggregation_type>
                    <source_model>Magento\Catalog\Model\Product\AttributeSet\Options</source_model>
                </column>
                <column name="type_id">
                    <source_model>Magento\Catalog\Model\Product\Type</source_model>
                </column>
                <column name="has_options">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="required_options">
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </column>
                <column name="image" frontendModel="image" columnType="eav">
                    <title>Base Image</title>
                    <aggregation_type>none</aggregation_type>
                    <ui_grid_class>Amasty\ReportBuilder\Ui\Component\Listing\Columns\Thumbnail</ui_grid_class>
                </column>
                <column name="small_image" frontendModel="image" columnType="eav">
                    <title>Small Image</title>
                    <aggregation_type>none</aggregation_type>
                    <ui_grid_class>Amasty\ReportBuilder\Ui\Component\Listing\Columns\Thumbnail</ui_grid_class>
                </column>
                <column name="thumbnail" frontendModel="image" columnType="eav">
                    <title>Thumbnail</title>
                    <aggregation_type>none</aggregation_type>
                    <ui_grid_class>Amasty\ReportBuilder\Ui\Component\Listing\Columns\Thumbnail</ui_grid_class>
                </column>
            </columns>

            <relations>
                <relation name="catalog_category" type="table">
                    <column>entity_id</column>
                    <reference_column>entity_id</reference_column>
                    <relation_table>catalog_category_product</relation_table>
                    <relation_column>product_id</relation_column>
                    <relation_reference_column>category_id</relation_reference_column>
                    <relationship_type>many_to_many</relationship_type>
                </relation>
                <relation name="order_item" type="column">
                    <column>entity_id</column>
                    <reference_column>product_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="creditmemo_item" type="column">
                    <column>entity_id</column>
                    <reference_column>product_id</reference_column>
                    <relationship_type>one_to_many</relationship_type>
                </relation>
                <relation name="stock_status" type="column">
                    <column>entity_id</column>
                    <reference_column>product_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
            </relations>
        </entity>
    </amasty_report_builder_entities>
</config>
