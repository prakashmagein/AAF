<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:amasty:module:Amasty_ReportBuilder:etc/entity_scheme.xsd">
    <amasty_report_builder_entities>
        <entity name="invoice_item">
            <title>Invoice Item</title>
            <main_table>sales_invoice_item</main_table>

            <columns>
                <column name="entity_id" primary="true" />
            </columns>

            <relations>
                <relation name="invoice" type="column">
                    <column>parent_id</column>
                    <reference_column>entity_id</reference_column>
                    <relationship_type>many_to_one</relationship_type>
                </relation>
                <relation name="catalog_product" type="column">
                    <column>product_id</column>
                    <reference_column>entity_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
                <relation name="order_item" type="column">
                    <column>order_item_id</column>
                    <reference_column>item_id</reference_column>
                    <relationship_type>one_to_one</relationship_type>
                </relation>
            </relations>
        </entity>
    </amasty_report_builder_entities>
</config>
