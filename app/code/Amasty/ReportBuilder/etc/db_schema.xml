        <index referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="amasty_report_builder_eav_index_int_replica" resource="default"
           comment="Amasty Catalog Product Integer Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="int" name="value" unsigned="false" nullable="true" identity="false"
                comment="Value"/>
        <column xsi:type="int" name="source_id" unsigned="true" nullable="true" identity="false"
                default="null" comment="Source Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <index referenceId="CATALOG_PRODUCT_ENTITY_INT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="CATALOG_PRODUCT_ENTITY_INT_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>

    <table name="amasty_report_builder_report_chart" resource="default" engine="innodb" comment="Reports Chart Table"
           onCreate="migrateReportBuilderCharts">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Chart ID"/>
        <column xsi:type="int" name="report_id" padding="10" unsigned="true" nullable="false" comment="Report ID"/>
        <column xsi:type="varchar" name="chart_type" nullable="false" length="15" comment="Chart Type"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AM_RB_CHRT_REP_ID_AM_RB_RPRT_REP_ID"
                    table="amasty_report_builder_report_chart"
                    column="report_id"
                    referenceTable="amasty_report_builder_report"
                    referenceColumn="report_id"
                    onDelete="CASCADE"/>
    </table>
    <table name="amasty_report_builder_report_chart_axis" resource="default" engine="innodb"
           comment="Reports Chart Axis Table" onCreate="migrateReportBuilderAxis">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Axis ID"/>
        <column xsi:type="int" name="chart_id" padding="10" unsigned="true" nullable="false" comment="Chart ID"/>
        <column xsi:type="varchar" name="type" nullable="false" length="15" comment="Axis Type"/>
        <column xsi:type="varchar" name="value" nullable="false" length="120" comment="Column ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AM_RB_CHRT_AXS_CHRT_ID_AM_RB_CHRT_ID"
                    table="amasty_report_builder_report_chart_axis"
                    column="chart_id"
                    referenceTable="amasty_report_builder_report_chart"
                    referenceColumn="id"
                    onDelete="CASCADE"/>
    </table>
</schema>
