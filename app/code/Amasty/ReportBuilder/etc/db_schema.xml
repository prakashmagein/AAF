<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="amasty_report_builder_report" resource="default" engine="innodb" comment="Reports Data Table">
        <column xsi:type="int" name="report_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Report ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" default="" comment="Report Name"/>
        <column xsi:type="varchar" name="main_entity" nullable="false" length="80" comment="Main Entity"/>
        <column xsi:type="varchar" name="store_ids" nullable="false" length="80" comment="Store IDs" disabled="true"/>
        <column xsi:type="smallint" name="is_use_period" padding="2" unsigned="true" nullable="false" identity="false"
                default="0" comment="Use Period Flag"/>
        <column xsi:type="smallint" name="display_chart" padding="2" unsigned="true" nullable="false" identity="false"
                default="0" comment="Use Line Chart"/>
        <column xsi:type="varchar" name="chart_axis_x" nullable="true" length="120"
                comment="Chart X Axis (Deprecated)"/>
        <column xsi:type="varchar" name="chart_axis_y" nullable="true" length="120"
                comment="Chart Y Axis (Deprecated)"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="report_id"/>
        </constraint>
    </table>

    <table name="amasty_report_builder_column" resource="default" engine="innodb" comment="Columns Data Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="varchar" name="column_id" length="120" nullable="false" comment="Column ID"/>
        <column xsi:type="varchar" name="custom_title" length="255" nullable="true"
                default="" comment="Custom Title"/>
        <column xsi:type="int" name="report_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Report ID"/>
        <column xsi:type="smallint" name="is_date_filter" nullable="false" padding="2" unsigned="true"
                default="0" identity="false" comment="Use this column for date filter"/>
        <column xsi:type="varchar" name="aggregation_type" length="20" nullable="true" comment="Aggregation Type"/>
        <column xsi:type="smallint" name="order" nullable="false" padding="2" unsigned="true"
                default="0" identity="false" comment="Use this column for sort"/>
        <column xsi:type="varchar" name="filter" nullable="false" default="" comment="Filter value"/>
        <column xsi:type="smallint" name="visibility" padding="2" unsigned="true" nullable="false" identity="false"
                default="1" comment="Column Visibility"/>
        <column xsi:type="smallint" name="position" padding="3" unsigned="true" nullable="false" identity="false"
                default="0" comment="Column Position"/>
        <constraint xsi:type="unique" referenceId="AM_RB_CLMN_CLMN_ID_REP_ID">
            <column name="report_id"/>
            <column name="column_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AM_RB_CLMN_REP_ID_REP_REP_ID"
                    table="amasty_report_builder_column" column="report_id"
                    referenceTable="amasty_report_builder_report"
                    referenceColumn="report_id" onDelete="CASCADE"/>
        <index referenceId="AMASTY_SCHEME_RELATION_SCHEME_ID" indexType="btree">
            <column name="id"/>
        </index>
    </table>

    <table name="amasty_report_builder_scheme_relation" resource="default" engine="innodb"
           comment="Reports Relation Data Table">
        <column xsi:type="int" name="scheme_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Scheme ID"/>
        <column xsi:type="int" name="report_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Report ID"/>
        <column xsi:type="varchar" name="source_entity" nullable="false" length="80" default=""
                comment="Source Entity"/>
        <column xsi:type="varchar" name="entity" nullable="false" length="80" default="" comment="Entity"/>
        <constraint xsi:type="unique" referenceId="AM_RB_SCHEM_REL_REP_ID_SRC_ENT_ENT">
            <column name="report_id"/>
            <column name="source_entity"/>
            <column name="entity"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="AM_RB_SCHEM_REL_REP_ID_REP_REP_ID"
                    table="amasty_report_builder_scheme_relation" column="report_id"
                    referenceTable="amasty_report_builder_report" referenceColumn="report_id" onDelete="CASCADE"/>
        <index referenceId="AMASTY_SCHEME_RELATION_SCHEME_ID" indexType="btree">
            <column name="scheme_id"/>
        </index>
    </table>

    <table name="amasty_report_builder_eav_index_int" resource="default"
           comment="Amasty Catalog Product Integer Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="int" name="value" unsigned="false" nullable="true" identity="false"
                comment="Value"/>
        <column xsi:type="int" name="source_id" unsigned="true" nullable="true" identity="false"
                default="null" comment="Source Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CATALOG_PRODUCT_ENTITY_INT_ENTITY_ID_ATTRIBUTE_ID_STORE_ID_VALUE">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="store_id"/>
            <column name="value"/>
            <column name="source_id"/>
        </constraint>
        <index referenceId="CATALOG_PRODUCT_ENTITY_INT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="CATALOG_PRODUCT_ENTITY_INT_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
    <table name="amasty_report_builder_eav_index_decimal" resource="default"
           comment="Amasty Catalog Product Decimal Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="decimal" name="value" scale="6" precision="20" unsigned="false" nullable="true"
                comment="Value"/>
        <column xsi:type="int" name="source_id" unsigned="true" nullable="true" identity="false"
                default="null" comment="Source Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_ENTITY_ID_ATTRIBUTE_ID_STORE_ID_VALUE">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="store_id"/>
            <column name="value"/>
            <column name="source_id"/>
        </constraint>
        <index referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="amasty_report_builder_eav_index_int_tmp" resource="default"
           comment="Amasty Catalog Product Integer Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="int" name="value" unsigned="false" nullable="true" identity="false"
                comment="Value"/>
        <column xsi:type="int" name="source_id" unsigned="true" nullable="true" identity="false"
                default="null" comment="Source Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CATALOG_PRODUCT_ENTITY_INT_ENTITY_ID_ATTRIBUTE_ID_STORE_ID_VALUE">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="store_id"/>
            <column name="value"/>
            <column name="source_id"/>
        </constraint>
        <index referenceId="CATALOG_PRODUCT_ENTITY_INT_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
        <index referenceId="CATALOG_PRODUCT_ENTITY_INT_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
    <table name="amasty_report_builder_eav_index_decimal_tmp" resource="default"
           comment="Amasty Catalog Product Decimal Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="decimal" name="value" scale="6" precision="20" unsigned="false" nullable="true"
                comment="Value"/>
        <column xsi:type="int" name="source_id" unsigned="true" nullable="true" identity="false"
                default="null" comment="Source Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_ENTITY_ID_ATTRIBUTE_ID_STORE_ID_VALUE">
            <column name="entity_id"/>
            <column name="attribute_id"/>
            <column name="store_id"/>
            <column name="value"/>
            <column name="source_id"/>
        </constraint>
        <index referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <index referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_ATTRIBUTE_ID" indexType="btree">
            <column name="attribute_id"/>
        </index>
    </table>
    <table name="amasty_report_builder_eav_index_decimal_replica" resource="default"
           comment="Amasty Catalog Product Decimal Attribute Backend Table">
        <column xsi:type="int" name="value_id" unsigned="false" nullable="false" identity="true"
                comment="Value ID"/>
        <column xsi:type="smallint" name="attribute_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Attribute ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Store ID"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Entity ID"/>
        <column xsi:type="decimal" name="value" scale="6" precision="20" unsigned="false" nullable="true"
                comment="Value"/>
        <column xsi:type="int" name="source_id" unsigned="true" nullable="true" identity="false"
                default="null" comment="Source Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="value_id"/>
        </constraint>
        <index referenceId="CATALOG_PRODUCT_ENTITY_DECIMAL_STORE_ID" indexType="btree">
