    <body>
        <referenceBlock name="customer_account_navigation">
            <block ifconfig="amstorecredit/general/enabled" after="customer-account-navigation-account-edit-link" class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-amstorecredit-link">
