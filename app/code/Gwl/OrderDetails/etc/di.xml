<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="OrderDetailsLoggerHandler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/order_details.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="OrderDetailsLogger" type="Monolog\Logger">
        <arguments>
            <argument name="name" xsi:type="string">OrderDetailsLogger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="customLogger" xsi:type="object">OrderDetailsLoggerHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Gwl\OrderDetails\Observers\OrderDetailObserver">
        <arguments>
            <argument name="logger" xsi:type="object">OrderDetailsLogger</argument>
            <argument name="orderAttributeEngine" xsi:type="object">orderDetailsEngine</argument>
        </arguments>
    </type>
    <type name="Gwl\OrderDetails\Observers\SaveAddressAttributeObserver">
        <arguments>
            <argument name="logger" xsi:type="object">OrderDetailsLogger</argument>
        </arguments>
    </type>

    <type name="Magento\Quote\Model\BillingAddressManagement">
        <plugin disabled="false" name="Gwl_OrderDetails_Plugin_Magento_Quote_Model_BillingAddressManagement" sortOrder="10" type="Gwl\OrderDetails\Plugin\Magento\Quote\Model\BillingAddressManagement"/>
    </type>
    <type name="Magento\Quote\Model\ShippingAddressManagement">
        <plugin disabled="false" name="Gwl_OrderDetails_Plugin_Magento_Quote_Model_ShippingAddressManagement" sortOrder="10" type="Gwl\OrderDetails\Plugin\Magento\Quote\Model\ShippingAddressManagement"/>
    </type>

</config>
