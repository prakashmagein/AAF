<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="magedelightsmsprofile" translate="label" type="text" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>md_section_smsprofile</class>
            <label>Mobile OTP Login</label>
            <tab>magedelight</tab>
            <resource>Magedelight_SMSProfile::config_root</resource>            
            <group id="general" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>                
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"  >
                    <label>Enable Mobile OTP Login</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_on_checkout" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"  >
                    <label>Enable On Checkout Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_login_popup" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"  >
                    <label>Enable Login Popup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="auto_generate_enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"  >
                    <label>Enable Auto Generate</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="send_otp_via" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Send OTP via</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\SendOtpVia</source_model>
                </field>
                <field id="api_gateway" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>SMS API Gateway</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\SMSProfileListApi</source_model>
                    <depends>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="account_sid" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Account SID</label>
                    <comment>You can get SID by login in https://www.twilio.com </comment>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Twilio Api Service</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="auth_token" translate="label" type="obscure" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auth Token</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="api_gateway">Twilio Api Service</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                    <validate>required-entry</validate>
                </field>
                <field id="twilio_phone" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Twilio Phone Number</label>
                    <comment>Please enter twilio phone number which you have purchased. eg: +123XXXXXXX</comment>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Twilio Api Service</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="twilio_service_id" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Twilio Service Id</label>
                    <comment>Enter twilio service id which you have configured for notification service. Eg: ISXXXXXXX</comment>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Twilio Api Service</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL</label>
                    <comment>Enter API url that is being used by your SMS service provider. </comment>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_credential" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Credentials</label>
                    <comment>Eg: username:test,password:test123  </comment>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_authorization_header" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Authorization Header</label>
                    <comment>Eg: AccessKey YOUR-API-KEY,AccessKey1 YOUR-API-KEY1</comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_to" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Key Name For "Send To" </label>
                    <comment>Specify key which should be used for "Send To" parameter. Eg: To, mobiles, msisdn </comment>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_message" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Key Name For "Send SMS Body" </label>
                    <comment> Specify key which should be used for "Send SMS" parameter. Eg: body, message, msg  </comment>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_get_request" translate="label" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API request in GET ? </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_xml" translate="label" type="select" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Request/Response in XML ?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_country" translate="label" type="select" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Add Country Code To Mobile Number </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Specify if country code is required or not in user's mobile number.</comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_params" translate="label" type="textarea" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Additional Parameters</label>
                    <comment>To enter params use given format: key1:value1,key2:value2,key3:value3 </comment>
                    <!-- <validate>required-entry</validate> -->
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_updateparams" translate="label" type="textarea" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Additional Parameters TO Update For Promotional Route</label>
                    <comment>Specify additional params that is being updated/removed by your SMS provider. To remove any parameter use key1:false and to update use key1:value1,key2:value2,key3:value3 </comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_url_notification" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Url For Notification Route</label>
                    <comment>Specify url to send Notification SMS. Skip this if same API URL is being used to send Notification SMS.</comment>                    
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_url_promotional" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Url For Promotional Route</label>
                    <comment>Specify url to send Promotional SMS. Skip this if same API URL is being used to send promotional SMS.</comment>                    
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="api_url_status" translate="label" type="text" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL To Fetch SMS Status</label>
                    <comment>Enter API url used to update status in SMS log. Please use {msid} for message id eg: http://test.com/{msid}  </comment>                    
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="process_status" translate="label" type="text" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Processing Status Label Of SMS</label>
                    <comment>Enter SMS status(s) which needs to be updated via cronjob. For eg. queued, pending, sent etc.</comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="fail_status" translate="label" type="text" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Failed Label Of SMS</label>
                    <comment>Enter SMS status for failure. You can add multiple status with comma separated. Eg: undelivered,DND,fail </comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="error_key" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Key Name For Error Message</label>
                    <comment>Enter key parameter that contains error message of SMS provider json response. For e.g : error,Error,error_message </comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="delivery_note" translate="label" type="label" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>NOTE: </label>
                    <comment><model>Magedelight\SMSProfile\Model\Config\Source\SmsProfileComment</model></comment>
                    <depends>
                        <field id="api_gateway">Other</field>
                        <field id="send_otp_via" separator="|">sms|both</field>
                    </depends>
                </field>
                <field id="customer_country" translate="label" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Use Customer Country</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="default_country" translate="label" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Default Country</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\SMSProfileCountryCode</source_model>
                    <depends> 
                        <field id="customer_country">0</field>
                    </depends>
                </field>
                <field id="default_customer_country" translate="label" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Default Country</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <depends>
                        <field id="customer_country">1</field>
                    </depends>
                    <validate>required-entry</validate>
                </field>
                <field id="available_customer_country" translate="label" type="multiselect" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Available Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                    <depends>
                        <field id="customer_country">1</field>
                    </depends>
                </field>
                <!-- Comman Mobile field --> 
                <!-- <field id="phone_max" translate="label" type="text" sortOrder="26" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Phone Number Maximum Length</label>
                    <comment>eg: 10</comment>
                    <validate>required-entry validate-digits</validate>                   
                </field>
                <field id="phone_min" translate="label" type="text" sortOrder="27" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Phone Number Minimum Length</label>
                    <comment>eg: 10</comment>
                    <validate>required-entry validate-digits</validate>                   
                </field> -->
                <field id="phone_notice" translate="label" type="text" sortOrder="28" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Comment shows below telephone field in front.</label>
                    <comment>Please enter comment here to show in frontend below telephone field  eg: Please add number without 0 and country code and only enter US's telephone to get sms.</comment>
                    <!-- <validate>required-entry</validate> -->          
                </field>
            </group>
            <group id="otpsetting" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Customer Phone And OTP Configuration</label>
                <field id="required_phone" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Phone Number Required On SignUp Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
                </field>
                <field id="required_email" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Make email optional</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Note: If set to "Yes", Require Emails Confirmation Of Default Magento will disable.]]></comment> 
                </field>
                <field id="link" translate="label" type="label" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Magedelight\SMSProfile\Block\Adminhtml\System\Config\Form\Field\Link</frontend_model>
                </field>
                <field id="verify_mobile" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Verify Mobile Before Customer Registration</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
                </field>
                <field id="otp_login" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Login Options</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\LoginOptions</source_model>
                    <comment>These options are for login page and login from checkout page.</comment>
                </field>
                <field id="otp_cod" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send OTP During Checkout For COD Payment Method</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
                    <comment>If yes, then system sends otp to shipping address's telephone number. </comment>
                </field>
                <field id="add_phone" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Redirect old customer to add mobile number after login</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
                    <comment>If yes, then system will redirect to add mobile number at edit customer information page and forcefully ask for it. </comment>
                </field>
                <field id="otp_format" translate="label" type="select" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>OTP Format</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\SmsProfileOtpFormat</source_model>
                </field>
                <field id="otp_length" translate="label" type="select" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>OTP Length</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\OTPLengthOptions</source_model>
                    <comment>Please select OTP Length. </comment>
                </field>
                <field id="otp_expiry" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Time For OTP Expiry</label>
                    <comment>Add time in minute here.  eg: 10 </comment>
                    <validate>required-entry validate-digits</validate>
                </field>
                <field id="otpresend_enable" translate="label" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>OTP Resend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="resend_time" translate="label" type="text" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>OTP Resend Duration</label>
                    <comment>Please enter more then 5 second. if you set less then 5 value system will take 5 instead of configured seconds.</comment>
                    <validate>required-entry validate-not-negative-number</validate>
                    <depends>
                        <field id="otpresend_enable">1</field> 
                    </depends>
                </field>
                <field id="otpresend_limit" translate="label" type="text" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>OTP Resend/Attempt Limit</label>
                    <validate>required-entry validate-not-negative-number</validate>
                </field>
                <field id="phone_eav" translate="label" type="select" sortOrder="14" showInDefault="1">
                    <label>Select Address To Get Phone Number To Map With Existing Customer Profile</label>
                    <source_model>Magedelight\SMSProfile\Model\Config\Source\SMSProfileListAddressOptions</source_model>
                    <comment>Please run the command "php bin/magento smsprofile:savephone" to save customer's phone based on above selected  option. </comment>
                </field>
                <field id="phone_validation" translate="label" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Phone Number Country Base Digit Validation</label>
                    <frontend_model>Magedelight\SMSProfile\Block\Adminhtml\Form\Field\Phone</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field> 
                <group id="recaptcha_settings" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>reCAPTCHA Settings</label>
                    <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" >
                        <label>Enable reCAPTCHA</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="recaptcha_sitekey" translate="label" type="text" sortOrder="2"    showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>reCAPTCHA Site Key</label>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="enable">1</field> 
                        </depends>
                    </field>
                    <field id="recaptcha_secret" translate="label" type="text" sortOrder="2"    showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>reCAPTCHA Secret Key</label>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="enable">1</field> 
                        </depends>
                    </field>
                    <field id="recaptcha_forms" translate="label" type="multiselect" sortOrder="3"    showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>reCAPTCHA Forms</label>
                        <source_model>Magedelight\SMSProfile\Model\Config\Source\RecaptchaForms</source_model>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="enable">1</field> 
                        </depends>
                    </field>
                </group> 
            </group>
            <group id="adminnotity" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Admin Notification</label>
                <group id="failurenotification" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Admin Failure Notification</label>
                    <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" >
                        <label>Failure Notification Email To Admin</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="notifytomail" translate="label" type="text" sortOrder="2"    showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Notification To Email</label>
                        <comment>Enter email addresses comma separated.</comment>
                        <validate>required-entry validate-comma-separated-emails-profile</validate>
                        <depends>
                            <field id="enable">1</field> 
                        </depends>
                    </field>
                    <field id="notifymailsender" translate="label" type="select" sortOrder="3"    showInDefault="1" showInWebsite="1" showInStore="1">
                       <label>Email Sender</label>
                       <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                       <depends>
                           <field id="enable">1</field>
                       </depends>
                    </field>
                </group>
                <group id="adminSms" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Admin Notification SMS</label>
                    <field id="notifyadmin" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Notify Admin by SMS</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="admin_no" translate="label" type="text" sortOrder="2"    showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Admin phone Number</label>   
                        <comment>Please enter admin number with counrty code if country code is requiured by SMS Service Provider and you can add multiple numbers .eg. +123XXXXXXX,+123XXXXXXX</comment>
                        <validate>required-entry</validate> 
                        <depends> 
                            <field id="notifyadmin">1</field>                       
                        </depends>
                    </field>
                    <field id="admin_events" translate="label" type="multiselect" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1" >
                        <label>Admin Events</label>
                        <source_model>Magedelight\SMSProfile\Model\Config\Source\AdminEvents</source_model>
                        <validate>required-entry</validate>
                    </field>
                </group>
            </group>
            <group id="customerSms" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Customer SMS Configuration</label>
