<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<!--    <update handle="sales_order_create_index"/>-->
    <update handle="sales_order_create_load_block_data"/>

    <body>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" template="Magento_Sales::order/create/js.phtml" name="create"/>
        </referenceContainer>
        <referenceContainer name="after.body.start">
            <block class="Magento\Catalog\Block\Adminhtml\Product\Composite\Configure" name="after.body.start.product_composite_configure" template="Magento_Catalog::catalog/product/composite/configure.phtml"/>
        </referenceContainer>

        <move element="data" destination="order_create_form" />
        <referenceContainer name="content">
            <block class="Magefan\OrderEdit\Block\Adminhtml\Order\Form" name="order_create_form"/>
        </referenceContainer>

        <referenceBlock name="data"  template="Magefan_OrderEdit::order/create/quickEditData.phtml">
            <block class="Magefan\OrderEdit\Block\Adminhtml\Order\Product\TaxRates" name="tax_rates" template="Magefan_OrderEdit::order/create/taxRates.phtml"/>
            <block class="Magefan\OrderEdit\Block\Adminhtml\Order\Shipping\Price" template="Magefan_OrderEdit::order/create/customShippingMethodPrice.phtml" name="custom_shipping_method_price"/>
            <block class="Magefan\OrderEdit\Block\Adminhtml\Order\OrderInfo\Edit" name="order_info_edit"/>
            <block class="Magefan\OrderEdit\Block\Adminhtml\Order\AccountInfo\Edit" name="order_account_info_edit"/>
        </referenceBlock>

        <referenceBlock class="Magefan\OrderEdit\Block\Adminhtml\Order\Product\Search\Grid" name="search.grid"/>
    </body>
</page>
